<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/transparent"
    android:visibility="visible"
    tools:context="com.sehmusaydogdu.matematikoyunu.MainActivity">


    <Button
        android:id="@+id/btnCikis"
        android:layout_width="250dp"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/btnBasla"
        android:layout_alignStart="@+id/btnBasla"
        android:layout_below="@+id/btnBasla"
        android:layout_marginTop="21dp"
        android:background="#e385f6f4"
        android:onClick="btnCikis"
        android:text="Çıkış"
        android:textColor="@color/colorPrimaryDark"
        android:textSize="20sp"
        android:textStyle="bold" />

    <Button
        android:id="@+id/btnBasla"
        android:layout_width="250dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/radioGroup3"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dp"
        android:background="#e385f6f4"
        android:onClick="btnBasla"
        android:text="Oyuna Başla"
        android:textColor="@color/colorPrimaryDark"
        android:textSize="20sp"
        android:textStyle="bold" />

    <RadioGroup
        android:id="@+id/radioGroup3"
        android:layout_width="280dp"
        android:layout_height="300dp"
        android:layout_marginTop="50dp"
        android:layout_alignParentTop="true"
        android:layout_alignLeft="@+id/btnBasla"
        android:layout_alignStart="@+id/btnBasla">

        <RadioButton
            android:id="@+id/kolaySeviye"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Seviye : Başlangıç"
            android:textColor="#5a6db2"
            android:textSize="20sp" />

        <RadioButton
            android:id="@+id/ortaSeviye"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Seviye : Orta"
            android:textColor="#5a6db2"
            android:textSize="20sp" />

        <RadioButton
            android:id="@+id/zorSeviye"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Seviye : Zor"
            android:textColor="#5a6db2"
            android:textSize="20sp" />

    </RadioGroup>

</RelativeLayout>
